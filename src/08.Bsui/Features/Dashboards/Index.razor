@page "/Dashboards"

@if (_mahasiswa != null && _data != null)
{
	<MudGrid>
		<MudItem xs="12" sm="6">
			<MudPaper Class="d-flex flex-column align-center justify-center py-8" Style="background-color: #f7fbff;">
				<MudIcon Icon="@Icons.Material.Filled.Group" Size="Size.Large" Color="Color.Primary" />
				<MudText Typo="Typo.h6" Class="mt-2">Mahasiswa Aktif KP</MudText>
				<MudText Typo="Typo.h4" Class="my-2">@_mahasiswa.Mahasiswa</MudText>
				<MudText Typo="Typo.body2">Mahasiswa</MudText>
			</MudPaper>
		</MudItem>
		<MudItem xs="12" sm="6">
			<MudPaper Class="d-flex flex-column align-center justify-center py-8" Style="background-color: #f7fbff;">
				<MudIcon Icon="@Icons.Material.Filled.Group" Size="Size.Large" Color="Color.Primary" />
				<MudText Typo="Typo.h6" Class="mt-2">Laporan Mahasiswa</MudText>
				<MudText Typo="Typo.h4" Class="my-2">@_mahasiswa.Laporan / @_mahasiswa.Mahasiswa</MudText>
				<MudText Typo="Typo.body2">Mahasiswa Mengumpulkan</MudText>
			</MudPaper>
		</MudItem>
		<MudItem xs="12" Class="d-flex justify-center">
			<MudPaper Class="d-flex flex-column align-center justify-center py-8" Style="background-color: #f7fbff; width: 80%;">
				<MudText Typo="Typo.h6" Class="mt-2">Jumlah Logbook per Bulan</MudText>
				<canvas id="myChart" width="400" height="110"></canvas>
			</MudPaper>
		</MudItem>
	</MudGrid>
}
else
{
	<p>Loading data...</p>
}
